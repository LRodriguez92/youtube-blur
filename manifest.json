{
    "name": "YouTube Blur",
    "description": "Avoid distractions on youtube by hiding/blurring thumbnails",
    "manifest_version": 3,
    "version": "1.0.0",
    "icons": {"128": "icon_128.png"},
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/"],
            "js": ["blur.js"]
        }
    ]
}